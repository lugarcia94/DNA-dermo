.category
    &__header
        &-container
            max-width: 1190px
            width: 100%
            margin: 0 auto
        &-wrapper
            display: flex
            align-items: center
            justify-content: space-between
            flex-wrap: wrap
            padding: 35px 0

    &__breadcrumb
        >ol
            display: inline-block
            >li
                display: inline
                &:first-child
                    span[itemprop]
                        font-size: 0px
                        &:before
                            content: 'Você está em: Página Inicial'
                            font-size: 13px
                span[itemprop]
                    font-size: 13px
                    color: #333333
                    font-weight: 500
                    line-height: 16px
                .separador
                    &:before
                        content: '/'
                &:last-child
                    span[itemprop]
                        font-weight: bold
    &__inforesult
        font-size: 13px
        color: #333333
        font-weight: 500
        line-height: 16px

    &__ordenation
        display flex
        justify-content: flex-end;

        .fbits-ordenar
            display: flex
            align-items: center
        .fbits-ordenar-por
            font-size: 14px;
            line-height: 30px;
            color: #333333;
            font-weight: 700;
            text-align: right;
            white-space: nowrap
        select 
            height 30px
            background-color: #ffffff
            border: 1px solid #F0F0F0
            border-radius: 0
            color: #333333
            font-size: 13px
            appearance none
            padding-left: 9px

    &__pagination
        .fbits-paginacao > ul
            a
                display: inline-block
                width: 35px
                height 35px
                line-height: 35px
                text-align: center
                font-size: 16px
                color: #373535
                font-weight: 400
                background: white
                margin: 0
                border: 1px solid #d9d9d9;
            li
                display: inline
                &.sel a
                    color: #ffffff
                    background: #111111

    &__list
        &-container
            max-width: 1190px
            width: 100%
            margin: 0 auto
        &-wrapper
            display: flex
            align-items: flex-start
            justify-content: space-between

    &__filter
        max-width: 220px
        width: 100%

        &-close
            display: none

        &-selected
            padding-top: 30px

        .fbits-filtro-pai
            margin: 0
            padding: 25px 0
            border none

            &:first-child
                padding-top 0px

        .fbits-filtro-titulo-pai
            font-size: 20px;
            color: $cor02
            line-height: 27px
            text-align: left
            text-transform: none
            font-weight: 800
            display flex
            align-items: center
            justify-content: flex-start
            margin-bottom: 30px
            padding-bottom 10px
            border-bottom 1px dashed #ccc
            position relative

            &:after
                content: ''
                height 5px
                background $cor01
                width: 33px
                position: absolute
                bottom: 0

        .fbits-filtro-quantidade
            color  $cor01


        .fbits-lista-filtro-filho
            display: block
            padding: 0
            .liCores
                position relative
            >li
                display flex
                align-items: center;
                font-size: 14px
                color: #333333
                font-weight: 500
                line-height 28px
                height auto
                line-height: 18px
                overflow hidden
                margin-bottom 5px
                
                input
                    appearance none
                    width: 15px
                    height 15px
                    border: 1px solid #D9D9D9
                    border-radius: 50%
                    margin 0
                    margin-right 5px
                    
                    &:checked
                        background: #ee3a53
                        box-shadow inset 0 0 0 4px white
                    
                label 
                    margin 0
                    font-size: 14px;
                    line-height: 30px;
                    color: #333333;
                    font-weight: 500;

            .fbits-filtro-ver-mais
                text-align: left
                font-size: 12px
                color: #373535
                font-weight: bold
        .fbits-filtro-filho-item
            display: block

        .fbits-componente-filtros-selecionados
            > ul
                padding-bottom: 30px
                border-bottom: 1px solid #E7E7E7
        .fbits-componente-filtros-selecionados-titulo
            font-size: 15px
            color: #353535
            font-weight: bold
            line-height: 19px
        .fbits-componente-filtro-selecionados-pai
            padding: 5px 0
            .tituloPai
                font-size: 13px
                color: #353535
                line-height: 16px
                text-transform: none
                &:after
                    display: none
            .fbits-componente-filtro-selecionados-remover
                display: none
        .fbits-componente-filtro-selecionados-filho.checked
            display: flex
            align-items: center
            justify-content: space-between
            >a
                order: 1
                display: block
                width: 25px
                height 25px
            span 
                font-size: 13px
                color: #353535
                line-height: 16px
                text-transform: none
            .qtde
                display: none
        span.fbits-filtro-limpar
            background: #353535
            border: 1px solid #373535
            border-radius: 1px
            font-family: Muli-Bold
            font-size: 15px
            color: #FFFFFF
            letter-spacing: -0.02px
            text-align: center
            width: 100%
            font-size: 0px
            height 40px
            line-height: 40px
            margin-top: 25px
            &:before
                content: 'LIMPAR FILTROS'
                font-size: 15px
                color: #ffffff
    &__products
        width: 80%
        >span#fbits-grupo-pagina-1
            display: flex!important
            flex-wrap: wrap
            padding-top: 30px
            justify-content: space-between
        .fbits-item-lista-spot 
            width 33%
    
    &__footer
        &-container
            max-width: 1190px
            width: 100%
            margin: 0 auto
        &-wrapper
            display: flex
            align-items: center
            justify-content: center
            flex-wrap: wrap
            padding-top: 30px
            margin-top: 30px
    &__text
        padding-top: 40px
        flex: 1 1 100%
        font-size: 13px
        color: #373535
        line-height: 21px
        padding-bottom: 30px
    &__btn-mobile
        display: none

//mobile
@media(max-width : 991px)
    .fbits-categoria
        padding-top: 100px
        .header__topbar
            display: none
    .category
        &__banner
            display: none
        &__products
            width: 100%
        &__filter
            position: fixed
            top: 0
            left 0
            transition: all .3s
            transform: translate3d(-100%, 0, 0)
            z-index: 99
            height: 100vh
            max-width: 100%
            background: rgba(0,0,0, 0.75)
            &-wrapper
                max-width: 250px
                padding: 0 15px
                width: 100%
                background: #fff
                height: 100vh
                overflow auto
            &-close
                display: block
                width: 45px
                height 45px
                position absolute
                top: 0px
                left 255px
                color #ee3a53
                font-size 18px
                line-height normal
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
        &__header
            &-wrapper
                padding-top: 25px
                > *
                    flex: 1 1 100%
                    text-align: center
                    margin: 5px 0
                .category__pagination
                    display: none
                .fbits-ordenar
                    justify-content: center
        &__btn-mobile
            display: flex
            align-items: center
            justify-content: center
            max-width 290px
            width: 100%
            height 40px
            margin: 0 auto
            background: #333333
            font-size: 14px
            color: #FFFFFF
            text-transform: uppercase
            font-weight: bold
            transition: all .3s
            margin-top: 15px
            cursor: pointer
            &:hover
                background: #ffffff
                color: #333333
                border: 1px solid #333333
        &__footer
            padding-bottom: 55px
            &-wrapper
                justify-content: center
                border: none
                width: 100%
            .category__inforesult, .category__text
                display: none

    .filter__open
        .category__filter
            transform: translate3d(0, 0, 0)
@media(max-width : 525px)
    .category__products
        .fbits-item-lista-spot
            flex: 1 1 49%


.categoria__name
    display block
    font-size: 25px
    color: $cor02
    line-height: 27px
    text-align: center
    text-transform: none
    font-weight: 800
    display flex
    align-items: center
    justify-content: center
    margin-bottom: 30px
    padding-bottom 10px
    border-bottom 1px dashed #ccc
    position relative

    &:after
        content: ''
        height 5px
        background $cor01
        width: 5%
        position: absolute
        bottom: 0


    &-span
        display block
    
    .fbits-item-lista-spot.fbits-item-lista-spot-empty
        display none