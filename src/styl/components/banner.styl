.full__banner
    .slick-prev
        left 0
        @media(max-width : 991px)
            width: 30px
            height 30px
    .slick-next
        right 0
        @media(max-width : 991px)
            width: 30px
            height 30px
    img
        max-width 100%
        margin: 0 auto
        @media(max-width : 991px)
            display: block
            position relative
            width: auto
            max-width: 149%
            left 50%
            transform: translateX(-50%)
    .fbits-banner-item
        overflow hidden

.mini-banner
    &__container
        max-width: 1330px
        padding: 0 0.94rem
        width: 100%
        margin: 0 auto
    &__wrapper
        display flex
        align-items: center
        justify-content: space-between
        flex-wrap: wrap
        padding-top: 50px
        padding-bottom: 55px
        @media(max-width : 767px)
            padding-top: 20px
        .fbits-banner-item
            flex: 0 1 33%
            overflow hidden
            display: flex
            justify-content: center
            
            @media(max-width : 767px)
                flex: 0 1 100%
                margin-bottom: 15px
            img
                transition: all .3s
                display: block
                max-width: 100%
                @media(max-width : 767px)
                    margin: 0 auto
                &:hover
                    transform: scale(1.1)

.mini-footer
    &__container
        max-width: 1330px
        padding: 0 0.94rem
        width: 100%
        margin: 0 auto
    &__wrapper
        padding-bottom: 40px
        padding-top: 60px
        @media(max-width : 767px)
            padding-bottom: 20px
            padding-top: 0px
    &__title
        font-size: 35px
        color: #434343
        line-height: 32px
        font-weight: 900
        text-transform: uppercase
        text-align: center
        padding-bottom: 20px
        @media(max-width : 767px)
            font-size: 20px
            padding-bottom: 25px
    &__banners
        display flex
        align-items: center
        justify-content: space-between
        flex-wrap: wrap
        @media(max-width : 767px)
            justify-content: center
        .fbits-banner-item
            flex: 0 1 48%
            overflow hidden
            @media(max-width : 767px)
                flex: 0 1 100%
                margin-bottom: 25px
        img 
            display: block
            transition: all .3s
            max-width 100%
            @media(max-width : 767px)
                margin: 0 auto
            &:hover
                transform: scale(1.1)
    .fbits-banner-item
        overflow hidden


.full__banner-beneficios 
    background: $cor02
    display: flex
    align-items: center
    justify-content: center

    ul
        display: flex
        align-items: center
        justify-content: space-between
        flex-wrap: wrap
        max-width 1330px
        padding 0 15px
        min-height 70px
        width: 100%

        li
            display: flex
            align-items: center
            position relative

            &:after
                content: ''
                width 1px
                background #ccc
                height 40px
                position: absolute
                right: -60px
                opacity: .3

                @media(max-width 991px)
                    display none

            &:last-child
                &:after
                    display none

.full__brands
    display: flex
    align-items: center
    justify-content: space-between
    flex-wrap: wrap
    max-width 1330px
    padding 0 15px
    margin 50px auto

    span
        font-size 25px
        color: #1c1d1d
        border-left: 5px solid #ee3a53
        font-weight: 700
        padding-left: 15px

    .fbits-listaMarcas-item
        border 1px dashed #d9d9d9
        padding 30px 50px
