.newsletter
    background: $cor02
    border 1px dashed #ccc
    
    &__container
        max-width: 1330px
        padding: 0 0.94rem
        width: 100%
        margin: 0 auto
        
    &__wrapper
        display: flex
        align-items: center
        justify-content: space-between
        min-height 85px
        @media(max-width : 1199px)
            flex-wrap: wrap
            justify-content: center
    &__title
        font-size: 18px
        color: #ffffff
        font-weight: bold
        line-height: 20px
        text-transform uppercase
        display flex
        flex-wrap: wrap
        margin 0
        max-width: 400px


        span
            text-transform none
            font-weight: 400
            font-size: 14px
            display: block
        @media(max-width : 1199px)
            margin-bottom: 15px
            text-align: center
    .footerNewsForm
        float: none
        width: 65.388%
        display: flex
        align-items: center
        justify-content: space-between
        padding 0
        @media(max-width : 1199px)
            width: 100%
        @media(max-width : 810px)
            flex-wrap: wrap
        input[type="text"]
            float: none
            width: 47.827%
            margin: 0
            border: 1px solid #E7E7E7
            color: #BABABA
            &::placeholder
                color: #BABABA
            @media(max-width : 810px)
                width: 100%
                margin-bottom: 12px
                text-align: center
    .newsletter-box + .newsletter-box
        display: none
    .newsletter-box
        width: 71.177%
        display: flex
        align-items: center
        justify-content: space-between
        @media(max-width : 810px)
            flex-wrap: wrap
            width: 100%
    .btNews
        float: none
        margin: 0
        background:$cor01 
        font-size: 13px
        font-weight: 800
        height 40px
        width 25%!important
        color #fff
        @media(max-width : 810px)
            width: 100%

.icon__news
    &:before
        content: ''
        background-image: url('data:image/png;base64,')
        background-repeat: no-repeat
        width: 50px
        height: 35px
        display: block
        margin-right 5px